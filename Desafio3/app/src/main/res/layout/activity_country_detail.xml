<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información del País -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_country_info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Contenedor para bandera y nombre del país -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Bandera del país -->
                <ImageView
                    android:id="@+id/imageCountryFlag"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/flag_description" />

                <TextView
                    android:id="@+id/textCountryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre del País"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <TextView
                android:id="@+id/textCapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_capital"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_region"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textPopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_population"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_currency"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_language"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Información del Clima -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_weather_info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Contenedor para icono y temperatura -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono del clima -->
                <ImageView
                    android:id="@+id/imageWeatherIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/weather_icon_description" />

                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_temperature"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E74C3C" />

            </LinearLayout>

            <TextView
                android:id="@+id/textCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_condition"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textWind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_wind"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_humidity"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>